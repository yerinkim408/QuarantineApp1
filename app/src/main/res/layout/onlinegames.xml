<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE8A6">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="@string/online_games3"
        android:textColor="#303C6C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="362dp"
        android:layout_height="686dp"
        android:layout_marginTop="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.377">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/goToClubPenguin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B4DFE5"
                android:fontFamily="monospace"
                android:text="@string/club_penguin"
                android:textColor="#303C6C" />

            <Button
                android:id="@+id/goToFakeArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4976C"
                android:fontFamily="monospace"
                android:text="@string/fake_artist_online"
                android:textColor="#303C6C" />

            <Button
                android:id="@+id/goToKahoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B4DFE5"
                android:fontFamily="monospace"
                android:text="@string/kahoot"
                android:textColor="#303C6C" />

            <Button
                android:id="@+id/goToMinecraft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4976C"
                android:fontFamily="monospace"
                android:text="@string/minecraft"
                android:textColor="#303C6C" />

            <Button
                android:id="@+id/goToMonopoly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B4DFE5"
                android:fontFamily="monospace"
                android:text="@string/monopoly_online"
                android:textColor="#303C6C" />

            <Button
                android:id="@+id/goToPogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4976C"
                android:fontFamily="monospace"
                android:text="@string/pogo_com"
                android:textColor="#303C6C" />

            <Button
                android:id="@+id/goToSkribblio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B4DFE5"
                android:fontFamily="monospace"
                android:text="@string/skribbl_io"
                android:textColor="#303C6C" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/goToMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to menu"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />
</androidx.constraintlayout.widget.ConstraintLayout>